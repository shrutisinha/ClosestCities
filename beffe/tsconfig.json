{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["dom","es6"],
        "rootDir": ".",
        "outDir": "build",
        "esModuleInterop": true,
        "removeComments": true,
        "strict": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}